{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
